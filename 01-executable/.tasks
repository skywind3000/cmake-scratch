# vim: set fenc=utf-8 ft=taskini:
# see: https://github.com/skywind3000/asynctasks.vim/wiki/Task-Config

[project-init]
command=rm -rf build && cmake -B build
command/win32=rd /s /q build 2> nul & cmake -B build -G "NMake Makefile"
cwd=<root>
save=2

[project-build]
command=cmake --build build
cwd=<root>
errorformat=%. %#--> %f:%l:%c,%f(%l):%m,%f:%l:%c:%m,%f:%l:%m
save=2

[project-run]
command=build/$(VIM_PRONAME)
command/win32=build\$(VIM_PRONAME)
cwd=<root>
output=terminal

[project-test]
command=echo test task
cwd=<root>
output=terminal


